<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/boardImage"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:src="@drawable/pinterest" />

        <TextView
            android:id="@+id/boardDescription"
            android:text="Description\n2nd Line"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/boardImage"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/boardPinCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="123"
            android:layout_alignBaseline="@+id/boardDescription"
            android:layout_alignBottom="@+id/boardDescription"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>